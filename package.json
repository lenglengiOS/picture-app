{
  "name": "picture-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:renderer": "webpack --config webpack.renderer.config.js",
    "watch:renderer": "webpack --config webpack.renderer.config.js --watch",
    "dev": "npm-run-all --parallel watch:renderer start",
    "pack": "electron-builder --dir",
    "dist": "npm run build:renderer && electron-builder"
  },
  "build": {
    "appId": "com.sunshine.app",
    "productName": "阳光图片转换器",
    "directories": {
      "output": "dist"
    },
    "files": [
      "!node_modules",
      "!dist",
      "main.js",
      "src/**/*"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg"
      ],
      "identity": null
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        "nsis"
      ]
    }
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "babel-loader": "^10.0.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "css-loader": "^7.1.2",
    "electron": "^30.5.1",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3",
    "npm-run-all": "^4.1.5",
    "style-loader": "^4.0.0",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@material-ui/core": "^5.0.0-beta.5",
    "@material-ui/icons": "^4.11.3",
    "jotai": "^2.15.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "styled-components": "^6.1.19"
  }
}
